    "client/modules/comments/index.ts",
    "client/modules/core/actions/index.ts",
    "client/modules/core/actions/posts.ts",
    "client/modules/core/actions/tests/posts.ts",
    "client/modules/core/configs/method_stubs/index.ts",
    "client/modules/core/configs/method_stubs/posts.ts",
    "client/modules/core/containers/newpost.ts",
    "client/modules/core/containers/post.ts",
    "client/modules/core/containers/postlist.ts",
    "client/modules/core/containers/tests/newpost.ts",
    "client/modules/core/containers/tests/post.ts",
    "client/modules/core/containers/tests/postlist.ts",
    "client/modules/core/index.ts",
    "common/collections.ts",
    "server/configs/initial_adds.ts",
    "server/index.ts",
    "server/methods/index.ts",
    "server/methods/posts.ts",
    "server/publications/index.ts",
    "server/publications/posts.ts",
    "typings/assertion-error/assertion-error.d.ts",
    "typings/chai/chai.d.ts",
